<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notes_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/preview_notes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:includeFontPadding="false"
            android:textColor="@color/dash_gif_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/preview_notes_message"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:includeFontPadding="false"
            android:textColor="@color/is_dark_blue"
            android:textSize="10sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/date_preview_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:includeFontPadding="false"
            android:textColor="@color/is_dark_blue"
            android:textSize="8sp" />




    </LinearLayout>


</LinearLayout>