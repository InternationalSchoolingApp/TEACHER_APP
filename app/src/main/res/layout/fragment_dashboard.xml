<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background"
    android:padding="10dp"
    android:backgroundTint="@color/white"
    tools:context=".fragment.DashboardFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_light_blue"
                android:padding="10dp"
                android:id="@+id/relativeLayoutProfile">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/pic_dashboard"
                    app:cardCornerRadius="10dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/profile_pic_dashboard"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/pic_dashboard"
                    android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/rubik"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/name_dashboard"
                    android:text="Name"
                    android:textColor="@color/dash_gif_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="ApplicationNumber"
                        android:fontFamily="@font/rubik"
                        android:includeFontPadding="false"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/application_number"
                        android:textColor="@color/dash_gif_blue"/>



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/assignSubject"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_light_blue"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:text="Assigned Subjects"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/schedule"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_light_blue"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:text="Schedule"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/notes"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_light_blue"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:text="Notes"
                    />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>