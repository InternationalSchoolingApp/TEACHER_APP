<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teacher_chat_row_page"
    android:orientation="vertical"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="2dp"
        app:cardElevation="3dp"
        android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_row"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher 1"
                android:textColor="@color/dash_gif_blue"
                android:id="@+id/recent_teacher_name_chat"
                android:textSize="16sp" />
            <TextView
                android:fontFamily="@font/rubik"
                android:layout_width="wrap_content"
                android:textColor="@color/dash_gif_blue"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="History Teacher"
                android:id="@+id/teacher_recent_message"
                android:textSize="12sp" />
            <TextView
                android:fontFamily="@font/rubik"
                android:layout_width="wrap_content"
                android:textColor="@color/dash_gif_blue"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/time_recent_message"
                android:textSize="12sp" />



        </LinearLayout>




    </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>